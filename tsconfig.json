{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"lib": [
			"ES2022",
			"DOM"
		],
		"outDir": "./dist",
		"rootDir": "./src",
		"jsx": "react",
		"typeRoots": [
			"./types",
			"./node_modules/@types"
		]
	},
	"include": [
		"src/**/*",
		"types/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"tests"
	]
}
