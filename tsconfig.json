{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"lib": ["ES2022", "DOM"],
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"jsx": "react",
		"typeRoots": ["./types", "./node_modules/@types"]
	},
	"include": ["src/**/*", "types/**/*"],
	"exclude": ["node_modules", "dist", "tests"]
}
